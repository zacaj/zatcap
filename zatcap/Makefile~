CC=g++

CFLAGS=-c -g -Wall -std=c++0x -fno-rtti -I../libtwitcurl -I ../libtwitcurl/curl -I/usr/include/ -DLINUX  -D_GNU_SOURCE=1 -D_THREAD_SAFE -I./


LDFLAGS= -L/usr/lib -L../libtwitcurl -lSDLmain -lSDL  -lcurl -lGLEW -lawesomium-1-7 -lGL -ltwitcurl -lpthread -g


SOURCES=Awesomium.cpp Column.cpp CustomColumn.cpp Tweet.cpp file.cpp gl_texture_surface.cpp json_reader.cpp json_value.cpp json_writer.cpp stream.cpp twitter.cpp zatcap.cpp TimedEventProcess.cpp 

OBJECTS=$(patsubst %.cpp,linux/obj/%.o,$(SOURCES))
EXECUTABLE=../DebugRelease/zatcap

all: $(EXECUTABLE)
	
$(EXECUTABLE):$(OBJECTS) 
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS) 

linux/obj/%.o: %.cpp
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -rf ../DebugRelease/zatcap
	rm -rf linux/obj/*

